<%- include('sticky-menu') %>

<% if (messages.success) { %>
<div class="alert alert-success" role="alert">
  <%= messages.success %>
</div>
<% } %>
<% if (messages.error) { %>
<div class="alert alert-danger" role="alert">
  <%= messages.error %>
</div>
<% } %>

<% if(myProfile) { %>
<%- include('header') %>

<h1>Il tuo profilo</h1>
<% } else { %>
<link rel="stylesheet" href="../css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="../css/style.css" />
<h1>Profilo di <%= name %></h1>
<% } %>

<div class="p-4">
  <form class="card col-12 col-md-9 align-center" action="/profile" method="POST">
    <h4 class="card-header">Modifica profilo di <%= name %></h4>
    <div class="card-body col-12">
      <div class="form-group mb-3">
        <label class="form-label" for="fiscal_code">Codice fiscale</label><br />
        <input class="form-control form-control-lg col-12" readonly type="fiscal_code" id="fiscal_code" name="fiscal_code" value="<%= cf %>" required />
      </div>
      <div class="row">
        <div class="col form-group mb-3">
          <label class="form-label" for="firstName">Nome</label>
          <input class="form-control form-control-lg col-12" type="firstName" id="firstName" name="firstName" value="<%= name %>" required />
        </div>
        <div class="col form-group mb-3">
          <label class="form-label" for="lastName">Cognome</label>
          <input class="form-control form-control-lg col-12" type="lastName" id="lastName" name="lastName" value="<%= surname %>" required />
        </div>
      </div>
      <div class="row">
        <div class="col form-group mb-3">
          <label class="form-label" for="city">Citt√†</label>
          <input class="form-control form-control-lg col-12" type="city" id="city" name="city" value="<%= city %>" required />
        </div>
        <div class="col form-group mb-4">
          <label class="form-label" for="email">Email</label>
          <input class="form-control form-control-lg col-12" type="email" id="email" name="email" value="<%= email %>" required />
        </div>
      </div>
      <button class="btn btn-primary col-12" type="submit">Salva modifiche</button>
    </div>
  </form>
</div>