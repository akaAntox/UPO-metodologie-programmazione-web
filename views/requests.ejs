<link rel="stylesheet" href="../css/bootstrap.min.css">
<h1>Le mie richieste</h1>
<% if (requests) { %>
  <div class="row">
    <div class="col-sm-6">
<% requests.forEach(function(request) { %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
  <p><%= request.content %></p>
  <p><%= request.location %></p>
  <p><%= request.address %></p>
  <p><%= request.status %></p>
  <a class="btn btn-success">Accetta richiesta</a>
</div>
</div>
<% }); %>
</div>
</div>
<% } %>